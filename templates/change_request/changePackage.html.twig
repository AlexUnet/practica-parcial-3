{% extends 'base.html.twig' %}
{% block title %}
	Change Package
{% endblock %}
{% block body %}
	<link href="https://fonts.googleapis.com/css?family=Work+Sans:400,600">
	<link rel="stylesheet" href="{{ app.request.getBaseURL() }}/assets/changeRequest.css">
	<body>
		<header>
			<div class="container">
				<h1 class="title">Change package</h1>
			</div>
		</header>

        <form action="" method="POST">
            <h2>Seleccione un paquete</h2>
            <input value="{{packageId}}" type='hidden'>
            <select name="package">
                <option value=""></option>
                {% for package in packages %}
                
                <option value='{{package.getId()}}'>
                    {{package.getName()}} precio:{{package.getPrice()}}$
                    cable:{{package.getCable().getName()??0}}
                    telefono:{{package.getTelephony().getMinutes()??0}}min 
                    internet:{{package.getInternet().getspeed()??0}}Mbps
                </option>
                {% endfor %}
            </select>
            <button type="submit">Aceptar</button>
        </form>
		
	</body>
{% endblock %}
