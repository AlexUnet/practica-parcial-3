{% extends 'base.html.twig' %}
{% block navigationBar %}{% endblock %}
{% block header %}{% endblock %}
{% block body %}
	<style>
		table,
		th,
		tr {
			align-items: center;
			border: 1px solid black;
			border-collapse: collapse;
		}
	</style>

	<style>
		.button2{
			background-color: green; /* Green */
			border: none;
			color: white;
			padding: 15px 32px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
		}
		.button {
			background-color: red; /* Green */
			border: none;
			color: white;
			padding: 15px 32px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
		}
	</style>

	<h1>Change Request List</h1>

	
		{% for item in changeRequestList %}

			<table style="width:100%">
				<tr>
					<form action="state" name="requestChange" method="GET">
						<th>
							{{item.getId()}}
						</th>
						<th>
							{{item.getUser().getName()}}
						</th>
						<th>
							{{item.getDate().format('d/m/y')}}
						</th>
						<th>
                            <input type="hidden" name="userId" value="{{item.getUser().getId()}}">
                            <input type="hidden" name="requestId" value="{{item.getId()}}">
							<button id="{{item.getId()}}" type="submit" class="{{item.getState()?"button":"button2"}}">
								{{item.getState()?"pendiente":"resuelta"}}
							</button>
						</th>
					</form>
				</tr>
			</table>
		{% endfor %}
	


{% endblock %}
